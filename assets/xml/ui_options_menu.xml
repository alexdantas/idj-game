<?xml version="1.0" encoding="utf-8" ?>
<data>
  <include id="_ui_globals" />

  <!-- Background -->
  <sprite src="bg_main_menu" x="0" y="0" />
  <sprite src="logo" x="141" y="50" />

  <!-- Radio to select the game language -->
  <text id="language_text"
	  x="100" y="300"
	  width="300"
	  height="50"
	  use_def="crom_medium"
	  color="0xe3cf92"
	  outline="0x000000"
	  text="$LANGUAGE"
	  />

  <radio_group id="locale_radio" use_def="radio_medium">
	<!-- Relatively positioning -->
	<anchor
	  x="language_text.left" y="language_text.bottom+25"
	  x-flush="left" y-flush="top"
	  />

	<radio id="en-US" label="$LANGUAGE_BILINGUAL:EN-US" context="index" />
	<radio id="pt-BR" label="$LANGUAGE_BILINGUAL:PT-BR" context="index" />
  </radio_group>

  <!-- Toggle fullscreen -->
  <checkbox id="fullscreen_toggle"
			label="$BUTTON_FULLSCREEN"
			use_def="text_button_medium"
			label_width="300">
	<!-- Relatively positioning -->
	<anchor
	  x="locale_radio.left" y="locale_radio.bottom+50"
	  x-flush="left" y-flush="top"
	  />

	<param type="string" value="fullscreen" />
  </checkbox>

  <button id="button_back"
		  use_def="text_button_medium"
		  label="$BUTTON_BACK">
	<!-- Relatively positioning -->
	<anchor
	  x="fullscreen_toggle.left" y="fullscreen_toggle.bottom+50"
	  x-flush="left" y-flush="top"
	  />

	<param type="string" value="back"/>
  </button>

</data>
